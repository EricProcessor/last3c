.shopContent{
  padding: 0 20rpx;
  margin-top: 60rpx;
  margin-bottom:180rpx;
}
.dateOpt{
  /* border: 1px solid #5a79ff; */
  box-shadow:2px 1px 5px 5px rgba(0, 0, 0, .1);
  flex: none;  
  display: flex;  
  background: #fff;
  border-radius: 4px;  
}
.dateOpt .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;
  color: #b2c1ff; 
}
.dateOpt .item.dateAct{
  color: #5a79ff;
}
.dateOpt .item.dateAct:after{
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 40%;  
  /* right: center;   */
  /* margin-left: -25%; */
  height: 4rpx;  
  width: 20%;
  background: #5a79ff; 
}
.guestDetail{
  display: flex;
  margin: 40rpx 0;
}
.detail{
  flex: 1;
  border: 1px solid #b1b1b1;
  border-radius: 4px;
  padding: 0 5px;
}
.guestDetail .detail:first-child{
  margin-right:20rpx;
}
.male,.famale{
  font-size: 20px;
  color: #131313;
  width: 35%;
}
.detail .member{
   font-size: 20px;
   color: #131313; 
   display: inline-block;
}
.detail .gender:nth-child(1){
  margin-bottom: 6px;
}
.guestDetail .num{
  font-size: 18px;
  color: #ff5a5a;
  width: 30%;
}
.detail text{
  display: inline-block;
}
.detail .title{
  margin-bottom: 7px;
}
/*年龄分布  */
.agedistribution{
  display: flex;
  position: relative;
}
.agecontent{
  border: 1px solid #b1b1b1;
  border-radius: 4px;
  padding: 4px;
}
 /* .wenzi,.icon-group{
  display: inline-block;
}  */
.icon-group{
  position: absolute;
  right: 10px;
  bottom: 3px;
}
.icon-group text{
  font-size: 35rpx;
}
.icon-male,.icon-famale{
  display: inline-block;
  width: 15px;
  height: 15px;
  margin:0 10px;
  border-radius: 8px;
}
.icon-male{
  background-color: #ff5a5a;
}
.icon-famale{
  background-color: #5a79ff;
}
/*堆叠统计图  */
.agecontent .progresscount,.profamale,.promale{
  height: 20px;
}
.agecontent .progresscount{
  width: 100%;
  background-color: #f4f4f4;
  display: flex;
}
.agecontent .promale{
  width: 40%;
  background-color: #7b94ff;
}
.agecontent .profamale{
  width: 43%;
  background-color: #ff7b7b;
}
.agecontent .protitle text{
   font-size: 14px;
   color: #666;
}
.agecontent .protitle{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.agecontent .procomponent{
  margin: 20rpx 0;
}
/*选框  */
/* pages/demo/demo.wxss */
.select_box{
  background: #fff;
  position: relative;
}
.select{
  margin:60rpx 0;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  box-shadow:2px 1px 5px 5px rgba(0, 0, 0, .1);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 34rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 30rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 98rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 34rpx;
  /* border-bottom: 1px solid #efefef; */
  padding: 10rpx;
}
.followCont{
  display: flex;
  border: 1px solid #f0f0f0;
  flex-direction:column;
  border-radius: 4px;
   padding: 0 20rpx; 
}
.followCont .title text{
  background-color: #f0f0f0;
  margin-left: 40rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  padding: 10rpx 20rpx;
}
.followCont text{
  font-size: 30rpx;
}
.followCont .followNum{
  display: flex;
  justify-content: flex-end;
  padding: 5rpx 20rpx;
  margin-bottom: 20rpx;
}
.followCont .followTime text{
  color: #424242;
}
.followBox .progresscount,.profamale,.promale{
  height: 20px;
}
.followBox .progresscount{
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
}
.followBox .promale{
  width: 40%;
  background-color: #7b94ff;
}
.followBox .profamale{
  width: 60%;
  background-color: #ff7b7b;
}
.followBox .Proportion{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
